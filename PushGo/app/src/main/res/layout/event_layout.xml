<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/backButton"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/eventNameTextView"
            android:text="Event_Name"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/deleteEventButton"
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:id="@+id/eventDescriptionTextView"
        android:hint="@string/event_description_hint"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp" />

    <TextView
        android:text="@string/end_trigger_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/additionalOptionsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <!--This will be used for the various end trigger types in determining which to use
            and the appropriate settings for each type-->
    <View
        android:id="@+id/additionalOptionsView"
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:layout_height="0dp">

    </View>

</LinearLayout>